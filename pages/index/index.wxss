.bg-img {
  width: 100%;
  height: 100%;
}

.worth-view {
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  padding-top: 159rpx;
}

.worth {
  width: 479rpx;
  display: block;
  margin: auto;
}

.go {
  font-size: 28rpx;
  color: #fefefe;
  width: 260rpx;
  height: 70rpx;
  border-radius: 35rpx;
  border: solid 3rpx #fff;
  margin: auto;
  text-align: center;
  line-height: 70rpx;
  position: absolute;
  bottom: 120rpx;
  left: 0;
  right: 0;
}

.open-app {
  position: absolute;
  bottom: 130rpx;
  right: 73rpx;
  text-decoration: none;
  color: #fff;
  font-size: 26rpx;
  display: inline-block;
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  box-sizing: border-box;
  text-align: center;
  border-radius: 0;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  background-color: transparent;
  border-bottom: 1px solid #fff;
  padding-bottom: 8rpx;
  line-height: normal;
}
